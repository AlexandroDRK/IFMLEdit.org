#<%= id %>.container
    h3 <%= name %>
    dl.row
        - var item = vm['<%= id %>'].item
        if item
<% for (var i = 0; i < fields.length; ++i) { -%>
            dt.col-2 <%= fields[i] %>
            dd.col-10= item['<%= fields[i]%>']
<% } -%>
    .row
<% for (var i = 0; i < events.length; ++i) {
      if (events[i].targetsAction) { -%>
        form(action=vm['<%= events[i].id %>'].action, method="POST")
            each value, name in vm['<%= events[i].id %>'].hiddens
                input(type='hidden', name=name, value=value)
            button.col-xs-2.btn.btn.btn-secondary <%= events[i].name %>
<%    } else { -%>
        a.col-xs-2.btn.btn.btn-secondary(href=vm['<%= events[i].id %>'].href) <%= events[i].name %>
<%    }
   } -%>
