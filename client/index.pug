            .tab-content
                #ifml.tab-pane.editor.active(role='tabpanel', aria-labelledby='ifml-tab')
                    .sidebar
                        .list-group
                            button.list-group-item.list-group-item-action.model-load(type='button') Load Model
                            button.list-group-item.list-group-item-action.modal-example(type='button') Load Example
                            button.list-group-item.list-group-item-action.model-download(type='button') Download Model
                            button.list-group-item.list-group-item-action.png-download(type='button') Download as PNG
                    .board
                    input(type='file', style='width:0; height: 0')
                #pcn.tab-pane.editor(role='tabpanel', aria-labelledby='pcn-tab')
                    .sidebar
                        .list-group
                            button.list-group-item.list-group-item-action.model-generate(type='button') Generate
                            button.list-group-item.list-group-item-action.png-download(type='button') Download as PNG
                            .list-group-item
                                label
                                    input#pcn-simulate(type='checkbox')
                                    span Simulate
                    .board
                #statistics.tab-pane.editor(role='tabpanel', aria-labelledby='statistics-tab')
                    .sidebar
                        .list-group
                            button.list-group-item.list-group-item-action.model-load(type='button') Load Statistics
                        .list-group
                            .list-group-item Element Statistics
                        .list-group.statistics-color
                        .list-group
                            .list-group-item Source Statistics
                        .list-group.statistics-in
                        .list-group
                            .list-group-item Target Statistics
                        .list-group.statistics-out
                    .board.not-interactive
                    input(type='file', style='width:0; height: 0')
                #web-server.tab-pane.content(role='tabpanel', aria-labelledby='web-server-tab')
                    .container
                        .row
                            .col-12
                                h3
                                    button.btn.btn-primary.zip-try(type='button') Try in the Browser
                                    button.btn.btn-secondary.edit-db(type='button') ☰
                                .card
                                    .card-header.bg-dark
                                        form
                                            .input-group
                                                span.input-group-prepend
                                                    button.input-group-text.ifbrowser-back(type='button') ❮
                                                span.input-group-prepend
                                                    button.input-group-text.ifbrowser-forward(type='button') ❯
                                                span.input-group-prepend
                                                    button.input-group-text.ifbrowser-repeat(type='button') ⟲
                                                span.input-group-prepend
                                                    span.input-group-text.ifbrowser-baseaddress http://.../web/
                                                input.form-control.ifbrowser-address(type='text')
                                                span.input-group-append
                                                    button.input-group-text.ifbrowser-go(type='button') ▶
                                    .card-body.ifbrowser
                        .row
                            .col-12
                                h3 Or...
                                    button.btn.btn-primary.zip-download(type='button') Download the Source Files
                                h3 Once downloaded...
                                ol
                                    li
                                        | Install&nbsp;
                                        strong Node.js®
                                        | &nbsp;following the instructions on the&nbsp;
                                        a(href='https://nodejs.org/en/download/') official website
                                    li
                                        | Unpack the
                                        code webexample.zip
                                        | file
                                    li
                                        | Open a terminal and navigate to the
                                        code webexample
                                        | folder:
                                        pre
                                            span.text-primary cd&nbsp;
                                            span.text-success path_to_workspace/webexample
                                    li
                                        | Install all the dependencies running the command:
                                        pre
                                            span.text-primary npm&nbsp;
                                            span.text-success install
                                    li
                                        | Start the local server:
                                        pre
                                            span.text-primary npm&nbsp;
                                            span.text-success start
                                        | To stop the local server press&nbsp;
                                        kbd
                                            kbd ctrl
                                            | &nbsp;+&nbsp;
                                            kbd c
                                    li
                                        | Open to the application by navigation to&nbsp;
                                        a(href='http://localhost:3001') http://localhost:3001
                                br
                                br
                                br
