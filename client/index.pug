                #main-menu.collapse.navbar-collapse
                    ul.navbar-nav.nav.mr-auto(role='tablist')
                        li.nav-item
                            a#ifml-tab.nav-link.active(data-toggle='tab', role='tab', aria-selected='true', data-target='#ifml') IFML
                        li.nav-item
                            a#pcn-tab.nav-link(data-toggle='tab', role='tab', aria-selected='false', data-target='#pcn') PCN
